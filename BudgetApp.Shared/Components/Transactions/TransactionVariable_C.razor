@using Entities.Contracts.Dtos
@using Entities.Domain.Models
@using Microsoft.AspNetCore.Components.Forms

<div class="container-fluid py-4">
    @* ===== HEADER ===== *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <Icon Name="IconName.ArrowLeftRight" class="me-2"/>
            Transactions Variables
        </h2>
        <div class="d-flex gap-2">
            <Button Color="ButtonColor.Success" @onclick="() => OuvrirModal(null, TransactionType.Revenu)">
                <Icon Name="IconName.PlusCircle" class="me-1"/>
                Revenu
            </Button>
            <Button Color="ButtonColor.Danger" @onclick="() => OuvrirModal(null, TransactionType.Depense)">
                <Icon Name="IconName.DashCircle" class="me-1"/>
                Depense
            </Button>
        </div>
    </div>

    @* ===== SELECTEUR MOIS ===== *@
    <Card Class="mb-4 border-0 shadow-sm">
        <CardBody>
            <div class="row align-items-center">
                <div class="col-auto">
                    <Button Color="ButtonColor.Secondary" Outline="true" @onclick="MoisPrecedent">
                        <Icon Name="IconName.ChevronLeft"/>
                    </Button>
                </div>
                <div class="col text-center">
                    <h4 class="mb-0">@_selectedDate.ToString("MMMM yyyy")</h4>
                </div>
                <div class="col-auto">
                    <Button Color="ButtonColor.Secondary" Outline="true" @onclick="MoisSuivant"
                            Disabled="@(_selectedDate.Month == DateTime.Today.Month && _selectedDate.Year == DateTime.Today.Year)">
                        <Icon Name="IconName.ChevronRight"/>
                    </Button>
                </div>
            </div>
        </CardBody>
    </Card>

    @* ===== LOADING ===== *@
    @if (IsLoading)
    {
        <div class="text-center py-5">
            <Spinner Color="SpinnerColor.Primary"/>
            <p class="mt-3 text-muted">Chargement en cours...</p>
        </div>
    }
    else if (_errorMessage is not null)
    {
        <Alert Color="AlertColor.Danger">
            <Icon Name="IconName.ExclamationTriangle" class="me-2"/>
            @_errorMessage
        </Alert>
    }
    else
    {
        @* ===== STATISTIQUES ===== *@
        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <Card Class="h-100 border-0 shadow-sm border-start border-success border-4">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 p-3 rounded">
                                    <Icon Name="IconName.ArrowUpCircle" Size="IconSize.x2" Color="IconColor.Success"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Revenus</h6>
                                <h4 class="mb-0 text-success">+@CalculerTotalRevenus().ToString("N2") &euro;</h4>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
            <div class="col-md-4">
                <Card Class="h-100 border-0 shadow-sm border-start border-danger border-4">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-danger bg-opacity-10 p-3 rounded">
                                    <Icon Name="IconName.ArrowDownCircle" Size="IconSize.x2" Color="IconColor.Danger"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Depenses</h6>
                                <h4 class="mb-0 text-danger">-@CalculerTotalDepenses().ToString("N2") &euro;</h4>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
            <div class="col-md-4">
                <Card Class="@GetSoldeCardClass()">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="@GetSoldeIconBgClass() p-3 rounded">
                                    <Icon Name="IconName.Wallet2" Size="IconSize.x2" Color="@GetSoldeIconColor()"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Solde du mois</h6>
                                <h4 class="mb-0 @GetSoldeTextClass()">@GetSoldeDisplay()</h4>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
        </div>

        @* ===== LISTE DES TRANSACTIONS ===== *@
        @if (!_transactions.Any())
        {
            <Alert Color="AlertColor.Info">
                <Icon Name="IconName.InfoCircle" class="me-2"/>
                Aucune transaction pour ce mois. Ajoutez un revenu ou une depense !
            </Alert>
        }
        else
        {
            <Card Class="border-0 shadow-sm">
                <CardBody Class="p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 12%">Date</th>
                                    <th style="width: 10%" class="text-center">Type</th>
                                    <th style="width: 30%">Intitule</th>
                                    <th style="width: 18%">Categorie</th>
                                    <th style="width: 15%" class="text-end">Montant</th>
                                    <th style="width: 15%" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in _transactions.OrderByDescending(t => t.Date))
                                {
                                    var isRevenu = transaction.TransactionType == TransactionType.Revenu;

                                    <tr>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span>@transaction.Date.ToString("dd/MM")</span>
                                                <small class="text-muted">@transaction.Date.ToString("dddd")</small>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            @if (isRevenu)
                                            {
                                                <Badge Color="BadgeColor.Success">
                                                    <Icon Name="IconName.ArrowUp" class="me-1"/>
                                                    Revenu
                                                </Badge>
                                            }
                                            else
                                            {
                                                <Badge Color="BadgeColor.Danger">
                                                    <Icon Name="IconName.ArrowDown" class="me-1"/>
                                                    Depense
                                                </Badge>
                                            }
                                        </td>
                                        <td>
                                            <strong>@transaction.Intitule</strong>
                                        </td>
                                        <td>
                                            <Badge Color="BadgeColor.Primary">
                                                @if (!string.IsNullOrEmpty(transaction.Categorie.Icon))
                                                {
                                                    <Icon Class="me-1" CustomIconName="@transaction.Categorie.Icon"></Icon>
                                                }
                                                @transaction.Categorie.Name
                                            </Badge>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold @(isRevenu ? "text-success" : "text-danger")">
                                                @(isRevenu ? "+" : "-")@transaction.Montant.ToString("N2") &euro;
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <Button Color="ButtonColor.Info" Size="ButtonSize.Small" Outline="true"
                                                        @onclick="() => OuvrirModal(transaction, transaction.TransactionType)" title="Modifier">
                                                    <Icon Name="IconName.Pencil"/>
                                                </Button>
                                                <Button Color="ButtonColor.Danger" Size="ButtonSize.Small" Outline="true"
                                                        @onclick="() => ConfirmerSuppression(transaction)" title="Supprimer">
                                                    <Icon Name="IconName.Trash"/>
                                                </Button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </CardBody>
            </Card>
        }
    }
</div>

@* ===== MODAL AJOUT/EDITION ===== *@
<Modal @ref="_modalForm" Title="@GetModalTitle()" Size="ModalSize.Large">
    <BodyTemplate>
        <div class="row g-3">
            <div class="col-12">
                <div class="btn-group w-100" role="group">
                    <input type="radio" class="btn-check" name="transactionType" id="btnRevenu"
                           checked="@(_form.TransactionType == TransactionType.Revenu)"
                           @onchange="() => _form.TransactionType = TransactionType.Revenu"/>
                    <label class="btn btn-outline-success" for="btnRevenu">
                        <Icon Name="IconName.ArrowUpCircle" class="me-1"/>
                        Revenu
                    </label>

                    <input type="radio" class="btn-check" name="transactionType" id="btnDepense"
                           checked="@(_form.TransactionType == TransactionType.Depense)"
                           @onchange="() => _form.TransactionType = TransactionType.Depense"/>
                    <label class="btn btn-outline-danger" for="btnDepense">
                        <Icon Name="IconName.ArrowDownCircle" class="me-1"/>
                        Depense
                    </label>
                </div>
            </div>

            <div class="col-md-8">
                <label class="form-label">Intitule *</label>
                <InputText @bind-Value="_form.Intitule" class="form-control" placeholder="Ex: Salaire, Courses..."/>
            </div>

            <div class="col-md-4">
                <label class="form-label">Montant *</label>
                <div class="input-group">
                    <InputNumber @bind-Value="_form.Montant" class="form-control" placeholder="0.00"/>
                    <span class="input-group-text">&euro;</span>
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label">Categorie *</label>
                <InputSelect @bind-Value="_selectedCategorieId" class="form-select">
                    <option value="0">-- Choisir une categorie --</option>
                    @foreach (var cat in _categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </InputSelect>
            </div>

            <div class="col-md-6">
                <label class="form-label">Date *</label>
                <InputDate @bind-Value="_form.Date" class="form-control"/>
            </div>
        </div>
    </BodyTemplate>
    <FooterTemplate>
        <Button Color="ButtonColor.Secondary" @onclick="FermerModal">Annuler</Button>
        <Button Color="@(_form.TransactionType == TransactionType.Revenu ? ButtonColor.Success : ButtonColor.Danger)"
                @onclick="SauvegarderTransaction" Disabled="_isSaving">
            @if (_isSaving)
            {
                <Spinner Size="SpinnerSize.Small" class="me-1"/>
            }
            <Icon Name="IconName.CheckLg" class="me-1"/>
            @(_transactionEnEdition is null ? "Ajouter" : "Enregistrer")
        </Button>
    </FooterTemplate>
</Modal>

@* ===== MODAL CONFIRMATION SUPPRESSION ===== *@
<ConfirmDialog @ref="_confirmDialog"/>
