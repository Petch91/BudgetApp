@using Entities.Contracts.Dtos

<div class="container-fluid py-4">
    @* ===== HEADER ===== *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <Icon Name="IconName.BarChartLine" class="me-2"/>
            Rapport Mensuel
        </h2>
    </div>

    @* ===== SELECTEUR MOIS ===== *@
    <Card Class="mb-4 border-0 shadow-sm">
        <CardBody>
            <div class="row align-items-center">
                <div class="col-auto">
                    <Button Color="ButtonColor.Secondary" Outline="true" @onclick="MoisPrecedent">
                        <Icon Name="IconName.ChevronLeft"/>
                    </Button>
                </div>
                <div class="col text-center">
                    <h4 class="mb-0">@_selectedDate.ToString("MMMM yyyy")</h4>
                </div>
                <div class="col-auto">
                    <Button Color="ButtonColor.Secondary" Outline="true" @onclick="MoisSuivant"
                            Disabled="@(_selectedDate.Month == DateTime.Today.Month && _selectedDate.Year == DateTime.Today.Year)">
                        <Icon Name="IconName.ChevronRight"/>
                    </Button>
                </div>
            </div>
        </CardBody>
    </Card>

    @* ===== LOADING ===== *@
    @if (_isLoading)
    {
        <div class="text-center py-5">
            <Spinner Color="SpinnerColor.Primary"/>
            <p class="mt-3 text-muted">Chargement en cours...</p>
        </div>
    }
    else if (_errorMessage is not null)
    {
        <Alert Color="AlertColor.Danger">
            <Icon Name="IconName.ExclamationTriangle" class="me-2"/>
            @_errorMessage
        </Alert>
    }
    else if (_rapport is not null)
    {
        @* ===== STATISTIQUES ===== *@
        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <Card Class="h-100 border-0 shadow-sm border-start border-success border-4">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 p-3 rounded">
                                    <Icon Name="IconName.ArrowUpCircle" Size="IconSize.x2" Color="IconColor.Success"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Revenus</h6>
                                <h4 class="mb-0 text-success">+@_rapport.TotalRevenus.ToString("N2") &euro;</h4>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
            <div class="col-md-4">
                <Card Class="h-100 border-0 shadow-sm border-start border-danger border-4">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-danger bg-opacity-10 p-3 rounded">
                                    <Icon Name="IconName.ArrowDownCircle" Size="IconSize.x2" Color="IconColor.Danger"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Depenses</h6>
                                <h4 class="mb-0 text-danger">-@_rapport.TotalDepenses.ToString("N2") &euro;</h4>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
            <div class="col-md-4">
                <Card Class="@GetSoldeCardClass()">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="@GetSoldeIconBgClass() p-3 rounded">
                                    <Icon Name="IconName.Wallet2" Size="IconSize.x2" Color="@GetSoldeIconColor()"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Solde du mois</h6>
                                <h4 class="mb-0 @GetSoldeTextClass()">@GetSoldeDisplay()</h4>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
        </div>

        @* ===== FILTRE PAR CATEGORIE ===== *@
        <Card Class="mb-4 border-0 shadow-sm">
            <CardBody>
                <div class="d-flex align-items-center gap-3">
                    <span class="fw-bold">Filtrer :</span>
                    <Button Color="@(_selectedCategorieId == null ? ButtonColor.Primary : ButtonColor.Secondary)"
                            Size="ButtonSize.Small"
                            Outline="@(_selectedCategorieId != null)"
                            @onclick="() => FiltrerParCategorie(null)">
                        Toutes
                    </Button>
                    @foreach (var categorie in GetCategoriesFromRapport())
                    {
                        <Button Color="@(_selectedCategorieId == categorie.Id ? ButtonColor.Primary : ButtonColor.Secondary)"
                                Size="ButtonSize.Small"
                                Outline="@(_selectedCategorieId != categorie.Id)"
                                @onclick="() => FiltrerParCategorie(categorie.Id)">
                            @if (!string.IsNullOrEmpty(categorie.Icon))
                            {
                                <Icon CustomIconName="@categorie.Icon" class="me-1"/>
                            }
                            @categorie.Name
                        </Button>
                    }
                </div>
            </CardBody>
        </Card>

        @* ===== LISTE DES TRANSACTIONS ===== *@
        @if (!GetLignesFiltrees().Any())
        {
            <Alert Color="AlertColor.Info">
                <Icon Name="IconName.InfoCircle" class="me-2"/>
                Aucune transaction pour ce mois.
            </Alert>
        }
        else
        {
            <Card Class="border-0 shadow-sm">
                <CardBody Class="p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 12%">Date</th>
                                    <th style="width: 35%">Intitule</th>
                                    <th style="width: 20%">Categorie</th>
                                    <th style="width: 18%" class="text-end">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ligne in GetLignesFiltrees().OrderByDescending(l => l.Date))
                                {
                                    <tr class="@GetligneBgClass(ligne)">
                                        <td>
                                            <div class="d-flex flex-column">
                                                <span>@ligne.Date.ToString("dd/MM")</span>
                                                <small class="text-muted">@ligne.Date.ToString("dddd")</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <strong>@ligne.Intitule</strong>
                                                @if (ligne.IsDepenseFixe)
                                                {
                                                    <Badge Color="BadgeColor.Info" Class="ms-2">
                                                        <Icon Name="IconName.ArrowRepeat" class="me-1"/>
                                                        Recurrent
                                                    </Badge>
                                                }
                                            </div>
                                        </td>
                                        <td>
                                            <Badge Color="BadgeColor.Secondary">
                                                @if (!string.IsNullOrEmpty(ligne.Categorie.Icon))
                                                {
                                                    <Icon CustomIconName="@ligne.Categorie.Icon" class="me-1"/>
                                                }
                                                @ligne.Categorie.Name
                                            </Badge>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold @(ligne.IsRevenu ? "text-success" : "text-danger")">
                                                @(ligne.IsRevenu ? "+" : "-")@ligne.Montant.ToString("N2") &euro;
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </CardBody>
            </Card>
        }
    }
</div>
