@using Entities.Dtos
@using Microsoft.AspNetCore.Components.Forms

<Grid @ref="grid"
      TItem="CategorieDto"
      Class="table table-hover table-bordered table-striped"
      Data="_categories"
      AllowFiltering="true"
      AllowSelection="true"
      SelectedItemsChanged="OnSelectedItemsChanged"
      SelectedItems="selectedCategories"
      Responsive="true">

    <GridColumns>
        @* <GridColumn TItem="CategorieDto" HeaderText="Id" PropertyName="Id" > *@
        @*     @context.Id *@
        @* </GridColumn> *@
        <GridColumn TItem="CategorieDto" HeaderText="Nom" PropertyName="Name">
            @context.Name
        </GridColumn>
        <GridColumn TItem="CategorieDto" HeaderText="Icone" PropertyName="Icon" Filterable="false">
            <Icon CustomIconName="@context.Icon" Size="IconSize.x4"></Icon>
        </GridColumn>
    </GridColumns>

</Grid>