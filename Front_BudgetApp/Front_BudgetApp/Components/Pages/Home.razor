@page "/"
@using BudgetApp.Shared.Interfaces.Http
@using Entities.Contracts.Dtos
@inject IHttpRapport RapportService

<PageTitle>Tableau de bord</PageTitle>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <Icon Name="IconName.House" class="me-2"/>
            Tableau de bord
        </h2>
        <span class="text-muted">@DateTime.Today.ToString("MMMM yyyy")</span>
    </div>

    @if (_isLoading)
    {
        <div class="text-center py-5">
            <Spinner Color="SpinnerColor.Primary"/>
            <p class="mt-3 text-muted">Chargement en cours...</p>
        </div>
    }
    else if (_errorMessage is not null)
    {
        <Alert Color="AlertColor.Warning">
            <Icon Name="IconName.ExclamationTriangle" class="me-2"/>
            @_errorMessage
        </Alert>
    }
    else if (_rapport is not null)
    {
        <div class="row g-4">
            @* Total Revenus *@
            <div class="col-md-6 col-lg-4">
                <Card Class="h-100 border-0 shadow-sm border-start border-success border-4">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                                    <Icon Name="IconName.ArrowUpCircle" Size="IconSize.x3" Color="IconColor.Success"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Revenus du mois</h6>
                                <h3 class="mb-0 text-success">+@_rapport.TotalRevenus.ToString("N2") &euro;</h3>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>

            @* Total Depenses *@
            <div class="col-md-6 col-lg-4">
                <Card Class="h-100 border-0 shadow-sm border-start border-danger border-4">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="bg-danger bg-opacity-10 p-3 rounded-circle">
                                    <Icon Name="IconName.ArrowDownCircle" Size="IconSize.x3" Color="IconColor.Danger"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Depenses du mois</h6>
                                <h3 class="mb-0 text-danger">-@_rapport.TotalDepenses.ToString("N2") &euro;</h3>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>

            @* Solde *@
            <div class="col-md-12 col-lg-4">
                <Card Class="@($"h-100 border-0 shadow-sm {GetSoldeCardBorderClass()}")">
                    <CardBody>
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="@GetSoldeIconBgClass() p-3 rounded-circle">
                                    <Icon Name="IconName.Wallet2" Size="IconSize.x3" Color="@GetSoldeIconColor()"/>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1">Solde du mois</h6>
                                <h3 class="mb-0 @GetSoldeTextClass()">@GetSoldeDisplay()</h3>
                            </div>
                        </div>
                    </CardBody>
                </Card>
            </div>
        </div>

        @* Dernieres transactions *@
        @if (_rapport.Lignes.Any())
        {
            <Card Class="mt-4 border-0 shadow-sm">
                <CardHeader Class="bg-transparent border-0">
                    <h5 class="mb-0">
                        <Icon Name="IconName.ClockHistory" class="me-2"/>
                        Dernieres transactions
                    </h5>
                </CardHeader>
                <CardBody Class="p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Intitule</th>
                                    <th>Categorie</th>
                                    <th class="text-end">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ligne in _rapport.Lignes.OrderByDescending(l => l.Date).Take(5))
                                {
                                    <tr>
                                        <td>@ligne.Date.ToString("dd/MM")</td>
                                        <td><strong>@ligne.Intitule</strong></td>
                                        <td>
                                            <Badge Color="BadgeColor.Secondary">
                                                @if (!string.IsNullOrEmpty(ligne.Categorie.Icon))
                                                {
                                                    <Icon CustomIconName="@ligne.Categorie.Icon" class="me-1"/>
                                                }
                                                @ligne.Categorie.Name
                                            </Badge>
                                        </td>
                                        <td class="text-end">
                                            <span class="fw-bold @(ligne.IsRevenu ? "text-success" : "text-danger")">
                                                @(ligne.IsRevenu ? "+" : "-")@ligne.Montant.ToString("N2") &euro;
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </CardBody>
                <CardFooter Class="bg-transparent border-0 text-center">
                    <a href="/depenses" class="btn btn-outline-primary btn-sm">
                        <Icon Name="IconName.ArrowRight" class="me-1"/>
                        Voir tout le rapport
                    </a>
                </CardFooter>
            </Card>
        }
    }
</div>

@code {
    private RapportMoisDto? _rapport;
    private bool _isLoading = true;
    private string? _errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await ChargerRapport();
    }

    private async Task ChargerRapport()
    {
        _isLoading = true;
        _errorMessage = null;

        var result = await RapportService.GetRapportMois(DateTime.Today.Year, DateTime.Today.Month);

        if (result.IsSuccess)
        {
            _rapport = result.Value;
        }
        else
        {
            _errorMessage = result.Errors.FirstOrDefault()?.Message ?? "Erreur inconnue";
        }

        _isLoading = false;
    }

    private string GetSoldeCardBorderClass() =>
        _rapport?.Solde >= 0 ? "border-start border-success border-4" : "border-start border-danger border-4";

    private string GetSoldeIconBgClass() =>
        _rapport?.Solde >= 0 ? "bg-success bg-opacity-10" : "bg-danger bg-opacity-10";

    private IconColor GetSoldeIconColor() =>
        _rapport?.Solde >= 0 ? IconColor.Success : IconColor.Danger;

    private string GetSoldeTextClass() =>
        _rapport?.Solde >= 0 ? "text-success" : "text-danger";

    private string GetSoldeDisplay()
    {
        if (_rapport is null) return "0,00 €";
        var prefix = _rapport.Solde >= 0 ? "+" : "";
        return $"{prefix}{_rapport.Solde:N2} €";
    }
}
